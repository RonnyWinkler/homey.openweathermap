{
  "id": "nu.baretta.openweathermap",
  "sdk": 2,
  "name": {
    "en": "openweathermap"
  },
  "description": {
    "en": "Get weather data and forecasts"
    "nl": "Ontvang data en weersvooruitzichten"
  },
  "tags": {
    "en": [
      "weather",
      "forecast",
      "climate"
    ],
    "nl": [
      "weer",
      "vooruitzicht",
      "klimaat"
    ]
  },
  "category": "internet",
  "version": "0.0.1",
  "compatibility": ">=1.5.0",
  "author": {
    "name": "Anne Baretta",
    "email": "dev@baretta.nu"
  },
  "permissions": [
    "homey:manager:geolocation"
  ],
  "contributors": {
    "developers": [
      {
        "name": "Anne Baretta",
        "email": "dev@baretta.nu"
      }
    ]
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "dev@baretta.nu"
      }
    }
  },
  "capabilities": {
    "measure_visibility": {
      "type": "number",
      "title": {
        "en": "Visibility",
        "nl": "Zicht"
      },
      "getable": true,
      "setable": false,
      "units": {
        "en": "M"
      },
      "min": 0,
      "max": 20000,
      "step": 1
    },
    "measure_cloudiness": {
      "type": "number",
      "title": {
        "en": "Cloudiness",
        "nl": "Bewolking"
      },
      "getable": true,
      "setable": false,
      "units": {
        "en": "%"
      },
      "min": 0,
      "max": 100,
      "step": 1
    },
    "description": {
      "type": "string",
      "title": {
        "en": "Description",
        "nl": "Beschrijving"
      },
      "getable": true,
      "setable": false
    }
  },
  "drivers": [
    {
      "id": "openweathermap",
      "name": {
        "en": "OpenWeatherMap Driver",
        "nl": "OpenWeatherMap Driver"
      },
      "images": {
        "large": "/drivers/openweathermap/assets/images/large.png",
        "small": "/drivers/openweathermap/assets/images/small.png"
      },
      "class": "sensor",
      "capabilities": [
        "measure_temperature",
        "measure_humidity",
        "measure_pressure",
        "measure_rain",
        "measure_wind_strength",
        "measure_wind_angle",
        "measure_cloudiness",
        "measure_visibility",
        "description"
      ],
      "pair": [
        {
          "id": "pair"
        }
      ],
      "mobile": {
        "components": [
          {
            "id": "icon",
            "capabilities": []
          },
          {
            "id": "sensor",
            "capabilities": [
              "measure_temperature",
              "measure_humidity",
              "measure_pressure",
              "measure_rain",
              "measure_wind_strength",
              "measure_wind_angle",
              "measure_cloudiness",
              "measure_visibility",
              "description"
            ],
            "options": {
              "icons": {
                "measure_wind_angle": "./drivers/openweathermap/assets/images/wind_angle.svg",
                "measure_cloudiness": "./drivers/openweathermap/assets/images/clouds.svg",
                "measure_visibility": "./drivers/openweathermap/assets/images/visibility.png",
                "description": "./drivers/openweathermap/assets/images/description.png"
              }
            }
          }
        ]
      }
    }
  ]
}
