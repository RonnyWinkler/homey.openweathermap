	"flow": {
		"triggers": [{
				"id": "WeatherChanged",
				"title": {
					"en": "The weather(forecast) has changed",
					"nl": "Het weer is veranderd"
				},
				"hint": {
					"en": "Triggers when the description of the weather changes.",
					"nl": "Triggert zodra de beschrijving van het weer veranderd."
				},
				"tokens": [{
						"name": "description",
						"type": "string",
						"title": {
							"en": "Weather description",
							"nl": "Weersbeschrijving"
						},
						"example": {
							"en": "Clear sky",
							"nl": "Onbewolkt"
						}
					},
					{
						"name": "location",
						"type": "string",
						"title": {
							"en": "Location",
							"nl": "locatie"
						},
						"example": {
							"en": "Amsterdam, NL",
							"nl": "Amsterdam, NL"
						}
					}
				],
				"args": [{
					"name": "ChangedDescription",
					"type": "device",
					"filter": "driver_id=owmCurrent|owmForecast"
				}]
			},
			{
				"id": "WindBeaufortChanged",
				"title": {
					"en": "The wind strength (Beaufort) has changed",
					"nl": "De windkracht (Beaufort) is veranderd"
				},
				"hint": {
					"en": "Triggers when the strength of the wind (Beaufort) changes.",
					"nl": "Triggert zodra de windkracht (Beaufort) veranderd."
				},
				"tokens": [{
						"name": "measure_windstrength_beaufort",
						"type": "number",
						"title": {
							"en": "Wind strength in Beaufort scale",
							"nl": "Windkracht (Beaufort)"
						},
						"example": {
							"en": "4",
							"nl": "4"
						}
					},
					{
						"name": "location",
						"type": "string",
						"title": {
							"en": "Location",
							"nl": "locatie"
						},
						"example": {
							"en": "Amsterdam, NL",
							"nl": "Amsterdam, NL"
						}
					}
				],
				"args": [{
					"name": "ChangedWindspeedBeaufort",
					"type": "device",
					"filter": "driver_id=owmCurrent|owmForecast"
				}]
			},
			{
				"id": "MintempChanged",
				"title": {
					"en": "The minimum temperature has changed",
					"nl": "De minimum temperatuur is veranderd"
				},
				"hint": {
					"en": "Triggers when the minimum temperature changes.",
					"nl": "Triggert zodra de minimum temperatuur veranderd."
				},
