{
	"id": "nu.baretta.openweathermap",
	"sdk": 2,
	"name": {
		"en": "OpenWeatherMap"
	},
	"description": {
		"en": "Get weather data and forecasts",
		"nl": "Ontvang data en weersvooruitzichten"
	},
	"tags": {
		"en": [
			"weather",
			"forecast",
			"climate",
			"OWM"
		],
		"nl": [
			"weer",
			"vooruitzicht",
			"klimaat",
			"OWM"
		]
	},
	"images": {
		"large": "./assets/images/large.png",
		"small": "./assets/images/small.png"
	},
	"category": "internet",
	"version": "0.0.8",
	"compatibility": ">=1.5.0",
	"author": {
		"name": "Anne Baretta",
		"email": "dev@baretta.nu"
	},
	"permissions": [
		"homey:manager:geolocation"
	],
	"contributors": {
		"developers": [{
			"name": "Anne Baretta",
			"email": "dev@baretta.nu"
		}]
	},
	"contributing": {
		"donate": {
			"paypal": {
				"username": "dev@baretta.nu"
			}
		}
	},
	"capabilities": {
		"measure_visibility": {
			"type": "number",
			"title": {
				"en": "Visibility",
				"nl": "Zicht"
			},
			"getable": true,
			"setable": false,
			"units": {
				"en": "M"
			},
			"min": 0,
			"max": 20000,
			"step": 1
		},
		"measure_cloudiness": {
			"type": "number",
			"title": {
				"en": "Cloudiness",
				"nl": "Bewolking"
			},
			"getable": true,
			"setable": false,
			"units": {
				"en": "%"
			},
			"min": 0,
			"max": 100,
			"step": 1
		},
		"measure_temp_min": {
			"type": "number",
			"title": {
				"en": "Minimum temperature",
				"nl": "Minimum temperatuur"
			},
			"getable": true,
			"setable": false,
			"units": {
				"en": "C"
			}
		},
		"measure_temp_max": {
			"type": "number",
			"title": {
				"en": "Maximum temperature",
				"nl": "Maximum temperatuur"
			},
			"getable": true,
			"setable": false,
			"units": {
				"en": "C"
			}
		},
		"measure_wind_combined": {
			"type": "string",
			"title": {
				"en": "Wind speed and direction",
				"nl": "Windkracht en richting"
			},
			"getable": true,
			"setable": false
		},
		"measure_wind_direction_string": {
			"type": "string",
			"title": {
				"en": "Wind direction (compass)",
				"nl": "Windrichting (kompas)"
			},
			"getable": true,
			"setable": false
		},
		"measure_windstrength_beaufort": {
			"type": "number",
			"title": {
				"en": "Wind speed in Beaufort scale",
				"nl": "Windkracht in Beaufort schaal"
			},
			"getable": true,
			"setable": false,
			"units": {
				"en": "Beaufort"
			},
			"min": 0,
			"max": 12,
			"step": 1
		},
		"description": {
			"type": "string",
			"title": {
				"en": "Description",
				"nl": "Beschrijving"
			},
			"getable": true,
			"setable": false
		},
		"conditioncode": {
			"type": "number",
			"title": {
				"en": "OWM condition code",
				"nl": "OWM conditie code"
			},
			"getable": true,
			"setable": false
		},
		"date_txt": {
			"type": "string",
			"title": {
				"en": "Date",
				"nl": "Datum"
			},
			"getable": true,
			"setable": false
		},
		"sunrise": {
			"type": "string",
			"title": {
				"en": "Sunrise",
				"nl": "Zonsopgang"
			},
			"getable": true,
			"setable": false
		},
		"sunset": {
			"type": "string",
			"title": {
				"en": "Sunset",
				"nl": "Zonsondergang"
			},
			"getable": true,
			"setable": false
		}
