{
    "id": "owmOnecallCurrent",
    "name": {
        "en": "Current weathe (location)r",
        "de": "Aktuelles Wetter (Standort)",
        "nl": "Actueel weerbericht (locatie)"
    },
    "images": {
        "large": "/drivers/owmOnecallCurrent/assets/images/large.png",
        "small": "/drivers/owmOnecallCurrent/assets/images/small.png"
    },
    "class": "sensor",
    "connectivity": [ "cloud" ],
    "capabilities": [
        "forecast_time",
        "description",

        "measure_temperature",
        "measure_temperature_feelslike",

        "measure_humidity",
        "measure_cloudiness",

        "measure_rain",
        "measure_snow",

        "measure_wind_combined",
        "measure_wind_strength",

        "measure_visibility",
        "measure_pressure",

        "sunrise",
        "sunset",

        "measure_ultraviolet",

        "conditioncode",
        "conditioncode_detail",

        "measure_wind_angle",
        "measure_wind_direction_string",
        "measure_windstrength_beaufort"
    ],
    "pair": [{
        "id": "city_geocode",
        "navigation": {
            "next": "list_my_devices"
          }
        },
        {
            "id": "apikey_error",
            "navigation": {
                "prev": "city_geocode"
            }
        },
        {
            "id": "geolocation_error",
            "navigation": {
                "prev": "city_geocode"
            }
        },      
        {
            "id": "list_my_devices",
            "template": "list_devices",
            "navigation": {
                "next": "add_my_devices",
                "prev": "city_geocode"
            },
            "options": { "singular": true }
        },
        {
            "id": "add_my_devices",
            "template": "add_devices"
        }
    ]
}