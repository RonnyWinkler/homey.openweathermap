{
    "id": "owmOnecallHourly",
    "name": {
        "en": "Weather, hourly forecast",
        "de": "Wetter, st√ºndliche Vorhersage",
        "nl": "Weerbericht, uurlijkse voorspeling"
    },
    "images": {
        "large": "/drivers/owmOnecallHourly/assets/images/large.png",
        "small": "/drivers/owmOnecallHourly/assets/images/small.png"
    },
    "class": "sensor",
    "connectivity": [ "cloud" ],
    "capabilities": [
        "forecast_time",
        "description",

        "measure_temperature",
        "measure_temperature_feelslike",

        "measure_dew_point",
        "measure_pressure",

        "measure_humidity",
        "measure_pop",

        "measure_cloudiness",
        "measure_visibility",

        "measure_wind_combined",
        "measure_wind_strength",

        "measure_rain",
        "measure_snow",

        "measure_ultraviolet",
        "moonphase_type",

        "conditioncode",
        "conditioncode_detail",

        "measure_wind_angle",
        "measure_wind_direction_string",
        "measure_windstrength_beaufort",

        "conditioncode_text"

    ],
    "pair": [{
        "id": "settings",
        "navigation": {
            "next": "list_my_devices"
          }
        },
        {
            "id": "location_error",
            "navigation": {
                "prev": "settings"
            }
        },      
        {
            "id": "list_my_devices",
            "template": "list_devices",
            "navigation": {
                "next": "add_my_devices",
                "prev": "settings"
            },
            "options": { "singular": true }
        },
        {
            "id": "add_my_devices",
            "template": "add_devices"
        }
    ]
}