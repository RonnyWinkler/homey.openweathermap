{
    "id": "owmOnecallHourly",
    "name": {
        "en": "Hourly forecast",
        "de": "St√ºndliche Vorhersage",
        "nl": "Uurlijkse voorspeling"
    },
    "images": {
        "large": "/drivers/owmOnecallHourly/assets/images/large.png",
        "small": "/drivers/owmOnecallHourly/assets/images/small.png"
    },
    "class": "sensor",
    "connectivity": [ "cloud" ],
    "capabilities": [
        "forecast_time",
        "description",

        "measure_temperature",
        "measure_temperature_feelslike",

        "measure_humidity",
        "measure_cloudiness",

        "measure_rain",
        "measure_snow",

        "measure_wind_combined",
        "measure_wind_strength",

        "measure_visibility",
        "measure_pressure",

        "measure_pop",
        "measure_ultraviolet",

        "conditioncode",
        "conditioncode_detail",

        "measure_wind_angle",
        "measure_wind_direction_string",
        "measure_windstrength_beaufort"

    ],
    "pair": [{
        "id": "settings",
        "navigation": {
            "next": "list_my_devices"
          }
        },
        {
            "id": "location_error",
            "navigation": {
                "prev": "settings"
            }
        },      
        {
            "id": "list_my_devices",
            "template": "list_devices",
            "navigation": {
                "next": "add_my_devices",
                "prev": "settings"
            },
            "options": { "singular": true }
        },
        {
            "id": "add_my_devices",
            "template": "add_devices"
        }
    ]
}